@using Microsoft.CodeAnalysis.CSharp.Syntax
@model Instagram.Models.GalleryDetailModel


<div class="container body-content">
    <div class="row post-detail-cotainer">
        <div class="col-md-7">
            <div class="post-detail">
                <img src="@Model.Url" alt="@Model.Title" />
            </div>
        </div>
        
    </div>
    <div class="col-md-5">

        <h2>Some awesome heading</h2>
        <hr>
        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Blanditiis pariatur quod ipsum atque quam dolorem
            voluptate officia sunt placeat consectetur alias fugit cum praesentium ratione sint mollitia, perferendis
            natus quaerat!</p>
        <div class="row post-detail-meta">
            <span>Title: @Model.Title</span>
            <span>Uploaded: @Model.Created</span>
            @if (true)
            {
                <a href="#" style="color: black">
                    <span class="glyphicon glyphicon-heart red-heart lg-heart"></span>
                </a>
            }
            else
            {
                <a href="#" style="color: black">
                    <span class="glyphicon glyphicon-heart-empty lg-heart"></span>
                </a>
            }
            <a href="#" style="color: black">
                <span class="glyphicon glyphicon-comment gray-comment lg-commets"></span>
            </a>
        </div>
        <div class="row controls">
            <a class="btn btn-primary" asp-controller="Gallery" asp-action="Index">
                Back to all
            </a>
        </div>

    </div>
    
</div>
